#: import Factory kivy.factory.Factory

<CustomAddPopup@Popup>:
	auto_dismiss: False
	title: "Add Content"
	BoxLayout:
		BoxLayout:
			size: root.size
			orientation: 'vertical'
			BoxLayout:
				size_hint_y: 0.9
				orientation: 'horizontal'
				BoxLayout:
					size_hint_x: 0.7
					orientation: 'vertical'
					GridLayout:
						cols: 2
						size_hint_y: 0.2
						Label:
							size_hint_y: 0.1
							text: "Chapter"
						TextInput:
							size_hint_y: 0.1
							id: _chapter
							multiline: False
						Label:
							size_hint_y: 0.1
							text: "Topic"
						TextInput:
							size_hint_y: 0.1
							id: _topic
							multiline: False
					GridLayout:
						cols: 1
						Label:
							size_hint_y: 0.1
							text: "Content"
						TextInput:
							id: _info
							multiline: True

				BoxLayout:
					size_hint_x: 0.3
					orientation: 'vertical'
					Label:
						size_hint_y: 0.5
						text: """- a valid input for \nChapter and Topic consists \nof 1 to 10 chars max\n"""
					Label:
						id: no_validate
						size_hint_y: 0.4
					Button:
						size_hint_y: 0.1
						text: "Validate"
						on_press: root._validate()

			BoxLayout
				size_hint_y: 0.1
				orientation: 'horizontal'
				Button:
					id: add_button
					text: "ADD"
					disabled: True
					on_press: root._add()
				Button:
					text: "BACK"
					on_press: root.dismiss()

<CustomRemovePopup@Popup>:
	title: "Remove Content"
	auto_dismiss: False
	size_hint: (None, None)
	height: 320
	width: 480
	BoxLayout:
		GridLayout:
			cols: 2
			Label:
				text: "Chapter"
			TextInput:
				id: _chapter_
				multiline: False
			Label:
				text: "Topic"
			TextInput:
				id: _topic_
				multiline: False
			Button:
				text: "REMOVE"
				on_press: root._remove_()
			Button:
				text: "BACK"
				on_press: root.dismiss()


<CustomErrorPopup@Popup>:
	title: "Error"
	size_hint: (None, None)
	width: 240
	height: 120
	Button:
		id: err
		text: "Invalid Input"
		on_press: root.dismiss()


<MyLayout>:
	BoxLayout:
		cols: 3
		spacing: 10
		padding: 10
		size: root.width, root.height

		BoxLayout:
			id: chapter_
			cols: 1
			size_hint_x: 0.3
			orientation: 'vertical'

		BoxLayout:
			id: topic_
			cols: 1
			size_hint_x: 0.3
			orientation: 'vertical'

		BoxLayout:
			cols: 1
			TextInput:
				id: info_
				multiline: True
				disabled: True