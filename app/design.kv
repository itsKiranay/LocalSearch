
<RoundedButton@Button>:
	background_color: (0,0,0,0)
	background_normal: ''
	canvas.before:
		Color:
			rgba: (158/255.0, 73/255.0, 145/255.0, 1)
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [8]

<RoundedButtonGreen@Button>:
	background_color: (0,0,0,0)
	background_normal: ''
	canvas.before:
		Color:
			rgba: (11/255.0,135/255.0,15/255.0,1)
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [8]

<RoundedButtonRed@Button>:
	background_color: (0,0,0,0)
	background_normal: ''
	canvas.before:
		Color:
			rgba: (135/255.0,21/255.0,11/255.0,1)
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [8]

<CustomLabel@Label>:
	background_normal: ''
	background_color: (17/255.0,26/255.0,28/255.0,1)
	canvas.before:
		Color:
			rgba: self.background_color
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [8]

<CustomAddPopup@Popup>:
	auto_dismiss: False
	title: "Add Content"
	BoxLayout:
		BoxLayout:
			size: root.size
			orientation: 'vertical'
			BoxLayout:
				size_hint_y: 0.9
				orientation: 'horizontal'
				BoxLayout:
					size_hint_x: 0.7
					orientation: 'vertical'
					GridLayout:
						cols: 2
						size_hint_y: 0.2
						Label:
							size_hint_y: 0.1
							text: "Chapter"
						TextInput:
							size_hint_y: 0.1
							id: _chapter
							multiline: False
						Label:
							size_hint_y: 0.1
							text: "Topic"
						TextInput:
							size_hint_y: 0.1
							id: _topic
							multiline: False
					GridLayout:
						cols: 1
						Label:
							size_hint_y: 0.1
							text: "Content"
						TextInput:
							id: _info
							multiline: True

				BoxLayout:
					size_hint_x: 0.3
					orientation: 'vertical'
					Label:
						size_hint_y: 0.5
						text: """- A valid input for\nChapter and Topic\nconsists of 1 to 10\nchars max\n- In order to update\nsome topic or some\nchapter, address the chapter\nand topic name correctly\n"""
					Label:
						id: no_validate
						size_hint_y: 0.4
					RoundedButtonGreen:
						size_hint_y: 0.1
						text: "Validate"
						on_press: root._validate()

			BoxLayout
				size_hint_y: 0.1
				orientation: 'horizontal'
				padding: 10
				spacing: 10
				RoundedButtonGreen:
					id: add_button
					text: "ADD"
					disabled: True
					on_press: root._add()
				RoundedButtonRed:
					text: "BACK"
					on_press: root.dismiss()

<CustomRemovePopup@Popup>:
	title: "Remove Content"
	auto_dismiss: False
	size_hint: (None, None)
	height: 320
	width: 480
	BoxLayout:
		GridLayout:
			cols: 2
			padding: 10
			spacing: 10
			Label:
				text: "Chapter"
			TextInput:
				id: _chapter_
				multiline: False
			Label:
				text: "Topic"
			TextInput:
				id: _topic_
				multiline: False
			RoundedButtonRed:
				text: "REMOVE"
				on_press: root._remove_()
			RoundedButtonGreen:
				text: "BACK"
				on_press: root.dismiss()


<CustomErrorPopup@Popup>:
	title: "Error"
	size_hint: (None, None)
	width: 240
	height: 120
	Button:
		id: err
		text: "Invalid Input"
		on_press: root.dismiss()


<MyLayout>:
	BoxLayout:
		size: root.width, root.height
		orientation: 'vertical'
		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: 0.1
			padding: 10
			spacing: 10
			CustomLabel:
				id: label1
				text: "CHAPTERS"
				size_hint_x: 0.3
			CustomLabel:
				id: label2
				text: "TOPICS"
				size_hint_x: 0.3
			CustomLabel:
				text: "CONTENT"
		
		BoxLayout:
			orientation: 'horizontal'
			spacing: 10
			padding: 10
			size_hint_y: 0.9
			ScrollView:
				size_hint: (0.3, 1)
				do_scroll_x: False
				do_scroll_y: True		
				BoxLayout:
					id: chapter_
					padding: 10
					spacing: 10
					cols: 1
					size_hint_x: 1
					size_hint_y: None
					height: self.minimum_height
					orientation: 'vertical'

			ScrollView:
				size_hint: (0.3, 1)
				do_scroll_x: False
				do_scroll_y: True		
				
				BoxLayout:
					id: topic_
					padding: 10
					spacing: 10
					cols: 1
					size_hint_x: 1
					size_hint_y: None
					height: self.minimum_height
					orientation: 'vertical'

			BoxLayout:
				orientation: 'vertical'
				size_hint_y: 1
				spacing: 10
				ScrollView:
					size_hint: (1, None)
					size_hint_y: 1
					do_scroll_x: False
					do_scroll_y: True
					TextInput:
						id: info_
						background_normal: ''
						background_color: (158/255.0, 73/255.0, 145/255.0, 1)
						font_size: 17
						foreground_color: (1, 1, 1, 1)
						multiline: True
						size_hint_y: None
						height: self.minimum_height
						disabled: True

				RoundedButtonGreen:
					text: "Update"
					size_hint_y: 0.1
					size_hint_x: 0.5
					on_press: root.update_content()
