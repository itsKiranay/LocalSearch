#: import Factory kivy.factory.Factory

<CustomPopup@Popup>:
	auto_dismiss: False
	BoxLayout:
		BoxLayout:
			size: root.size
			orientation: 'vertical'
			BoxLayout:
				size_hint_y: 0.9
				orientation: 'horizontal'
				BoxLayout:
					size_hint_x: 0.7
					orientation: 'vertical'
					GridLayout:
						cols: 2
						size_hint_y: 0.2
						Label:
							size_hint_y: 0.1
							text: "layer0"
						TextInput:
							size_hint_y: 0.1
							id: content_layer0
							multiline: False
						Label:
							size_hint_y: 0.1
							text: "layer1"
						TextInput:
							size_hint_y: 0.1
							id: content_layer1
							multiline: False
					GridLayout:
						cols: 1
						Label:
							size_hint_y: 0.1
							text: "Content"
						TextInput:
							id: content_layer2
							multiline: True

				BoxLayout:
					size_hint_x: 0.3
					orientation: 'vertical'
					Label:
						size_hint_y: 0.5
						text: """- a valid input for layer0\nand layer1 consists only of\nalphabets (3 to 10 chars max)\n"""
					Label:
						id: no_validate
						size_hint_y: 0.4
					Button:
						size_hint_y: 0.1
						text: "Validate"
						on_press: root._validate()

			BoxLayout
				size_hint_y: 0.1
				orientation: 'horizontal'
				Button:
					id: add_button
					text: "ADD"
					disabled: True
					on_press: root._add()
				Button:
					text: "BACK"
					on_press: root.dismiss()

<MyLayout>:
	BoxLayout:
		cols: 3
		spacing: 10
		padding: 10
		size: root.width, root.height

		BoxLayout:
			id: layer0
			cols: 1
			size_hint_x: 0.3
			orientation: 'vertical'
			Button:
				text: "+ADD CHAPTER"
				size_hint_y: None
				height: 50
				on_press: root.add_item_layer0()


		BoxLayout:
			id: layer1
			cols: 1
			size_hint_x: 0.3
			orientation: 'vertical'

		BoxLayout:
			cols: 1
			# Button:
			# 	text: "COLUMN 1"
